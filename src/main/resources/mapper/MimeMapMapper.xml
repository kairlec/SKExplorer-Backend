<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kairlec.dao.MimeMapMapper">

    <update id="init">
        create table if not exists mime_map
        (
            ext varchar(256) not null primary key,
            mime varchar(512) not null
        )
    </update>

    <select id="getAll" resultType="com.kairlec.pojo.MimeMap">
        SELECT *
        FROM mime_map
    </select>

    <select id="getMimeMap" parameterType="java.lang.String" resultType="com.kairlec.pojo.MimeMap">
        SELECT *
        FROM mime_map
        WHERE ext = #{ext}
    </select>

    <insert id="insertMimeMap" parameterType="com.kairlec.pojo.MimeMap">
        INSERT INTO mime_map(ext,mime)
        VALUES (#{ext}, #{mime})
    </insert>

    <update id="updateMimeMap" parameterType="com.kairlec.pojo.MimeMap">
        UPDATE
            `mime_map`
        SET mime=#{mime}
        WHERE ext = #{ext}
    </update>

    <delete id="deleteMimeMap" parameterType="java.lang.String">
        DELETE
        FROM mime_map
        WHERE ext = #{ext}
    </delete>
</mapper>